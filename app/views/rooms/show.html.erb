<%- model_class = Room -%>
<div class="page-header">
  <h1><%=t '.title', :default => @room.title.titleize %></h1>
</div>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag @room.photo_one.url(:medium) %>
      <div class="carousel-caption">
          <h3><%= @room.title %></h3>
      </div>
    </div>

    <div class="item">
      <%= image_tag @room.photo_two.url(:medium) %>
      <div class="carousel-caption">
          <h3><%= @room.title %></h3>
      </div>
    </div>

    <div class="item">
      <%= image_tag @room.photo_three.url(:medium) %>
      <div class="carousel-caption">
          <h3><%= @room.title %></h3>
      </div>
    </div>

    <div class="item">
      <%= image_tag @room.photo_four.url(:medium) %>
      <div class="carousel-caption">
          <h3><%= @room.title %></h3>
      </div>
    </div>

    <style type="text/css">
      #carousel-example-generic { margin-left: 30%; margin-right: 30%;}
    </style>
    
  </div>
 
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev"></a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next"></a>
</div> <!-- Carousel -->

<% link = listing_path(@room.floorplan.listing.id) %>
<a type="button" class="btn btn-default" href=<%= link %>>
  <i class="fa fa-arrow-left"></i> Back
</a>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>

  
